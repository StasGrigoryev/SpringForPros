<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="singer"
          class="com.home.start.lookupMethodInjection.Singer"
          scope="prototype"/>

    <bean id="abstractLookupBean"
          class="com.home.start.lookupMethodInjection.AbstractLookupDemoBean">
        <lookup-method name="getMySinger" bean="singer"/>
    </bean>

    <bean id="standardLookupBean"
          class="com.home.start.lookupMethodInjection.StandardLookupDemoBean">
        <property name="mySinger" ref="singer"/>
    </bean>
</beans>